    "width": 2034,
    "reload_style_on_change": true,
    "spacing": 0,
    // Choose the order of the modules
    "modules-left": [
        "custom/left1",
        "hyprland/workspaces",
        "custom/right1",
        "hyprland/window"
    ],
    "modules-center": [
        "custom/left2",
        "temperature",
        "custom/left3",
        "memory",
        "custom/left4",
        "cpu#usage",
        "custom/leftin1",
        "custom/left5",
        "custom/center",
        "custom/right2",
        "custom/rightin1",
        "clock#time",
        "custom/right3",
        "clock#date",
        "custom/right4",
        "network",
        //"custom/wi",
        //"custom/wifi",
        "custom/right5"
    ],
    "modules-right": [
        "mpris",
        "custom/left6",
        "pulseaudio",
        "custom/left7",
        "bluetooth",
        "custom/left8",
        "custom/notification",
        "custom/leftin2",
